#!/usr/bin/env bash

# LazyKube - K3s HA Cluster Management Tool
# Wrapper script for Makefile commands

set -e

# Get the directory where this script is located
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# Colors
BLUE='\033[0;34m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
NC='\033[0m' # No Color

# Show usage if no arguments provided
if [ $# -eq 0 ]; then
    cd "$SCRIPT_DIR"
    make help
    exit 0
fi

# Get the command
COMMAND=$1
shift

# Valid commands that map to Makefile targets
VALID_COMMANDS=(
    "help"
    "configure"
    "config"
    "check"
    "setup"
    "ping"
    "install"
    "install-verbose"
    "verify"
    "logs"
    "dashboard"
    "haproxy-stats"
    "dns-help"
    "kubeconfig"
    "fix-kubeconfig"
    "trust-ca"
    "uninstall"
    "clean"
    "clean-config"
)

# Check if command is valid
is_valid_command() {
    local cmd=$1
    for valid in "${VALID_COMMANDS[@]}"; do
        if [ "$cmd" = "$valid" ]; then
            return 0
        fi
    done
    return 1
}

# Execute the command
if is_valid_command "$COMMAND"; then
    cd "$SCRIPT_DIR"
    make "$COMMAND" "$@"
else
    echo -e "${RED}Error: Unknown command '$COMMAND'${NC}"
    echo ""
    echo "Run 'lazykube help' to see available commands"
    exit 1
fi
